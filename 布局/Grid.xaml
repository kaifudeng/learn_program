<Window x:Class="布局.Grid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:布局"
        mc:Ignorable="d"
        Title="Grid" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" 
               VerticalAlignment="Center" HorizontalAlignment="Center" Content="Title"/>
        <Label Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" 
               Content="FirstName: " Margin="10"/>
        <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Width="100" Height="30" ></TextBox>
        <Label Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Content="LastName" Margin="10"/>
        <TextBox Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Width="100" Height="30" />
    </Grid>
</Window>
